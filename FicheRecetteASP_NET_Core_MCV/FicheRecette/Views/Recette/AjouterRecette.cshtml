@using FicheRecette.Model

<div class="Container Recette">
    <div class="Titre">
        <h2>Ajouter une Recette</h2>
    </div>

    <div class="errors">
        <div class="col-lg-12">
            @if ((ViewBag.errors != null))
            {
                if ((ViewBag.errors as List<string>).Count > 0)
                {
                    <div class="row RecetteLine">
                        <div class="row">
                            <div class="col-lg-12 alert alert-danger">
                                @foreach (string e in (ViewBag.errors as List<string>))
                                {
                                    <div class="row">
                                        <div class="col-lg-12">
                                            @e
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <form method="post" asp-controller="Recette" asp-action="AjouterRecettePost" enctype="multipart/form-data">
        <div class="row RecetteLine">


            <label>Veuillez saisir le nom de la recette : </label>
            <div class="row1">
                <input type="text" class="form-control" value="@Model.NomRecette" name="nomRecette" />
            </div>
        </div>
        <div class="row RecetteLine">

            <label>Choisissez la catégorie : </label>
            <div class="row1">
                <select name="Categorie" class="form-control">
                    <option></option>
                    @foreach (Category c in (ViewBag.Liste as List<Category>))
                    {
                        <option value="@c.Id">@c.Titre</option>
                    }
                </select>
            </div>
        </div>
        <div class="row RecetteLine">
            <label>Choisissez le nombre de personne(s) : </label>
            <div class="row1">
                <select name="NbPersonne" class="form-control" value="@Model.NbPersonne">
                    <option placeholder="NbPersonne"></option>
                    @foreach (NbPersonne n in (ViewBag.ListenbPersonne as List<NbPersonne>))
                    {
                        <option value="@n.Id">@n.ChoixNbPersonne</option>
                    }
                </select>
            </div>
        </div>
        <div class="row RecetteLine">
            <label>Choisissez la difficulté : </label>
            <div class="row1">
                <select name="Difficulte" class="form-control" value="@Model.Difficulte">
                    <option placeholder="Difficulte"></option>
                    @foreach (Difficulte d in (ViewBag.Listedifficulte as List<Difficulte>))
                    {
                        <option value="@d.Id">@d.Titre</option>
                    }

                </select>
            </div>
        </div>
        <div class="row RecetteLine">
            @*<div class="col-lg-12">
                    @if ((ViewBag.errors != null))
                    {
                        if ((ViewBag.errors as List<string>).Count > 0)
                        {
                            <div class="row">
                                <div class="col-lg-12 alert alert-danger">
                                    @foreach (string e in (ViewBag.errors as List<string>))
                                    {
                                        <div class="row">
                                            <div class="col-lg-12">
                                                @e
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>

                <div class="col-lg-12">

                    @if (ViewBag.Ingredients != null)
                    {
                        if (ViewBag.Ingredients)
                        {
                            <div class="row">
                                <div class="col-lg-12 alert alert-success">
                                    @ViewBag.Message
                                </div>
                            </div>
                        }
                    }
                </div>
                <label>Veuillez saisir la liste des ingrédients : </label>

                @if (Model.Count == 0)
                {
                    <div>
                        Aucun ingrédient.
                    </div>
                }
                @foreach (Ingredient i in Model)
                {
                    <div>
                        @i.Nom
                        <a asp-action="DeleteIngredient" asp-controller="Recette" asp-route-id="@i.Id">Supprimer</a>
                    </div>
                }
                <div class="Titre"><h2>Ajouter les ingrédients :</h2></div>
                <form asp-action="registerIngredient" asp-controller="recette" method="post">
                    <div class="row RecetteLine">
                        <label>Nom de l'ingrédient : </label>
                        <div class="row1">
                            <input type="text" name="Titre" />
                            <button type="submit">Ajouter</button>
                        </div>
                    </div>
                </form>*@
            <label>Veuillez saisir la liste des ingrédients : </label>
            <div class="row1">
                <textarea value="@Model.Ingredient" name="ingredient" class="form-control" placeholder="Liste d'ingrédients"> </textarea>

            </div>
        </div>
        <div class="row RecetteLine">
            <label>Veuillez saisir les étapes de la réalisation : </label>
            <div class="row1">
                <textarea value="@Model.Realisation" name="realisation" class="form-control" placeholder="Description de la réalisation"> </textarea>
            </div>
        </div>
        <div class="row RecetteLine">
            <label>Ajouter une/des images(s) : </label>
            <div class="row1">
                <input type="file" name="images" multiple placeholder="Les images de la recette" class="form-control" />
            </div>
        </div>
        <div class="row RecetteLine">
            <div class="btn">
                <button type="submit">Ajouter</button>
            </div>
        </div>
    </form>
</div>