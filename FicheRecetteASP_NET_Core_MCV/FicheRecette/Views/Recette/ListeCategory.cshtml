@using FicheRecette.Model;
@model List<Category>;

<div class="row">
    <div class="col-lg-12">
        @if ((ViewBag.errors != null))
        {
            if ((ViewBag.errors as List<string>).Count > 0)
            {
                <div class="row">
                    <div class="col-lg-12 alert alert-danger">
                        @foreach (string e in (ViewBag.errors as List<string>))
                        {
                            <div class="row">
                                <div class="col-lg-12">
                                    @e
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
    <div class="Categories">
        <div class="row">

            @if (ViewBag.Categories != null)
            {
                if (ViewBag.Categories)
                {
                    <div class="row">
                        <div class="col-lg-12 alert alert-success">
                            @ViewBag.Message
                        </div>
                    </div>
                }
            }
        </div>
        
    </div>
</div>
<div>
    <div class="Titre"> <h1>Liste Catégories</h1></div>
   
    @if (Model.Count == 0)
    {
        <div>
            Aucune Catégorie
        </div>
    }
    @foreach (Category c in Model)
    {
        <div>
            @c.Titre
            <a asp-action="DeleteCategory" asp-controller="Recette" asp-route-id="@c.Id">Supprimer</a>
        </div>
    }
</div>
<div class="Titre"><h2>Ajouter une categorie</h2></div>
<div>
    <form asp-action="RegisterCategory" asp-controller="recette" method="post">
        <div>
            <label>Titre : </label>
            <input type="text" name="Titre" />
        </div>
        <div>
            <button type="submit">Ajouter</button>
        </div>
</form>
</div>